<h2>新規ユーザー作成</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "ui form segment" }, data: { turbo: false}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%# メールアドレス %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %><br />
  </div>

  <%# パスワード %>
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上の英数字で入力してください)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード" %>
  </div>

  <%# パスワード（確認用） %>
  <div class="field">
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード（確認用）" %>
  </div>

  <%# 登録ボタン %>
  <%= f.submit "登録する", class: "ui primary submit button" %>

  <div class="ui error message"></div>
<% end %>

<%= render "devise/shared/links" %>
